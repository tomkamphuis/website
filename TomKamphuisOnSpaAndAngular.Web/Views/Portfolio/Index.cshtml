                </li>
            </ul>
            <a class="prev" id="menu-prev" href="#">&#xe073;</a>
            <a class="next" id="menu-next" href="#">&#xe076;</a>
        </nav>
        @*@Html.Partial("_ResumePartial")
        @Html.Partial("_PortfolioPartial")
        @Html.Partial("_ContactPartial")*@
    </section>
    @Html.Partial("_FooterPartial")
</section>
