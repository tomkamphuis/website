    @Html.Partial("_HeaderPartial")
    <section id="content" ng-controller="SlideController" ng-init="selectSlide('profile')">
        @*@Html.Partial("_ProfilePartial")*@
        <nav class="menu">
            <ul class="tabs">
                <li class="tmenu" ng-repeat="slide in slides">
